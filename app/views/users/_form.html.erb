<%= simple_form_for [@user] do |f| %>
  <%= render :partial => 'shared/error_messages', :locals => { :target => @user } %>
  <%= f.input :name %>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>
  <%= f.input :role, :as => :radio_buttons %>
  <%= f.button :submit %>
<% end %>
