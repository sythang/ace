<%= simple_form_for @test do |f| %>
	<div class="header">
	  	<div class="col-md-6">
	  		<%= link_to '<span class="glyphicon glyphicon-arrow-left"></span> Back'.html_safe, tests_path, class: 'btn btn-primary' %>
	  		<button class="btn btn-primary" type="submit">
	  			<span class="glyphicon glyphicon-floppy-save"></span> Save
	  		</button>
	  	</div>
	</div>
	<%= f.hidden_field :teacher_id, value: current_user.id %> 
  <%= render :partial => 'shared/error_messages', :locals => { :target => @test } %>
  <%= f.input :name %>
  <%= f.input :description, as: :text, input_html: { rows: 10 } %>
  <hr>
	<h3>Questions</h3>
	<div id="questions">
		<%= f.simple_fields_for :questions do |question| %>
      <%= render 'question_fields', f: question %>
    <% end %>
    <%= link_to_add_association '<span class="glyphicon glyphicon-plus"></span> Question'.html_safe, f, :questions, { class: 'btn btn-primary' } %>
	</div>
<% end %>
