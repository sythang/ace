<%= simple_form_for @test do |f| %>
	<%= f.hidden_field :teacher_id, value: current_user.id %> 
  <%= render :partial => 'shared/error_messages', :locals => { :target => @test } %>
  <%= f.input :name %>
  <%= f.input :description, as: :text, input_html: { rows: 10 } %>
  <hr>
	<h3>Questions</h3>
	<div id="questions">
		<%= f.simple_fields_for :questions do |question| %>
      <%= render 'question_fields', f: question %>
	    <div class="links">
	    	<%= link_to_add_association 'add question', f, :questions %>
	    </div>
    <% end %>
	</div>
  <%= f.button :submit %>
<% end %>
